<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id = "@+id/serveActivityRL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.teambarq.barq.ServeActivity">

    <TextView
        android:id="@+id/upNextTimerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <ImageView
        android:id="@+id/barLayoutImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_alignParentLeft="true"
        />


    <com.skyfishjy.library.RippleBackground
        android:id="@+id/contentCir1"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rb_color="@color/carribGreen"
        app:rb_radius="30dp"
        app:rb_rippleAmount="2"
        app:rb_duration="4000"
        app:rb_scale="3"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/upNextTimerView"
        android:layout_toLeftOf="@+id/swipe_list"
        >
        <ImageView
            android:id="@+id/cirImage1"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerInParent="true"
            />
    </com.skyfishjy.library.RippleBackground>


    <com.skyfishjy.library.RippleBackground
        android:id="@+id/contentCir2"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        app:rb_color="@color/lipRed"
        app:rb_radius="30dp"
        app:rb_rippleAmount="2"
        app:rb_duration="4000"
        app:rb_scale="3"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/upNextTimerView">
        <ImageView
            android:id="@+id/cirImage2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerInParent="true"
            />
    </com.skyfishjy.library.RippleBackground>


    <com.skyfishjy.library.RippleBackground
        android:id="@+id/contentCir3"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rb_color="@color/lightBlue"
        app:rb_radius="30dp"
        app:rb_rippleAmount="2"
        app:rb_duration="4000"
        app:rb_scale="3"
        >
        <ImageView
            android:id="@+id/cirImage3"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerInParent="true"
            />
    </com.skyfishjy.library.RippleBackground>


        />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/swipe_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_toRightOf= "@id/barLayoutImage"
        android:layout_alignParentTop="true"
        tools:listitem="@layout/item_swipe" >
    </android.support.v7.widget.RecyclerView>


</RelativeLayout>